#include <stdio.h>

int main() {
    int i, j, rows;

    // Ask user for number of rows
    printf("Enter the number of rows: ");
    scanf("%d", &rows);

    // Outer loop for each row
    for(i = 1; i <= rows; i++) {
        // Inner loop for printing stars
        for(j = 1; j <= i; j++) {
            printf("*");
        }
        printf("\n"); // Move to next line after each row
    }

    return 0;
}

